package Pokemon;

import java.util.Scanner;

public class Pokemon {
	public static Pokemon[] pmon;
	Scanner scanner = new Scanner(System.in);

	private String pmonName;
	private String pmonType;
	private int pmonLevel;
	private int pmonHp;
	private int pmonMaxHp;
	private int pmonAttack;
	private int pmonDefense;
	private boolean pmonEvolve; // 진화 가능한지 판별

	public Pokemon(String pmonname, String pmontype, int pmonlevel, int pmonhp, int pmonmaxhp, int pmonattack,
			int pmondefense, boolean pmonevolve) {
		this.pmonName = pmonname;
		this.pmonType = pmontype;
		this.pmonLevel = pmonlevel;
		this.pmonHp = pmonhp;
		this.pmonMaxHp = pmonmaxhp;
		this.pmonAttack = pmonattack;
		this.pmonDefense = pmondefense;
		this.pmonEvolve = pmonevolve;
	}

