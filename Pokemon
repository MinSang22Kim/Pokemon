	// 메소드 get : 속성을 조회
	public String getName() {
		return pmonName;
	}

	public void setName(String pmonname) {
		this.pmonName = pmonname;
	}

	public String getType() {
		return pmonType;
	}

	public void setType(String pmontype) {
		this.pmonType = pmontype;
	}

	public int getPmonLevel() {
		return pmonLevel;
	}

	public void setPmonLevel(int pmonlevel) {
		this.pmonLevel = pmonlevel;
	}

	public int getHp() {
		return pmonHp;
	}

	public void setHp(int pmonhp) {
		if (pmonhp <= 0) {
			this.pmonHp = 0;
			return;
		}
		this.pmonHp = pmonhp;
	}

	public int getAttack() {
		return pmonAttack;
	}

	public void setAttack(int pmonattack) {
		this.pmonAttack = pmonattack;
	}

	public int getDefense() {
		return pmonDefense;
	}

	public void setDefense(int pmondefense) {
		this.pmonDefense = pmondefense;
	}

	public int getMaxHp() {
		return pmonMaxHp;
	}

	public void setMaxHp(int pmonMaxHp) {
		this.pmonMaxHp = pmonMaxHp;
	}

	public boolean getPmonEvolve() {
		return pmonEvolve;
	}

	public boolean setPmonEvolve(boolean pmonevolve) {
		return this.pmonEvolve = pmonevolve;
	}

	public static Pokemon copyPmon(Pokemon p) {
		String name = p.getName();
		String type = p.getType();
		int level = p.getPmonLevel();
		int hp = p.getHp();
		int maxHp = p.getMaxHp();
		int attack = p.getAttack();
		int defense = p.getDefense();
		boolean evolve = p.getPmonEvolve();

		Pokemon np = new Pokemon(name, type, level, hp, maxHp, attack, defense, evolve);

		return np;

	}

	public static void levelUp(Pokemon pk) {
		pk.setPmonLevel(pk.getPmonLevel() + 1);
		pk.setAttack((pk.getAttack() + 2));
		pk.setDefense(pk.getDefense() + 2);
		pk.setMaxHp(pk.getMaxHp() + 3);
		pk.setHp(pk.getMaxHp());
		// 스펙 업
	}

	public static void status(Pokemon pk) {
		System.out.println("이름 : " + pk.getName());
		System.out.println("속성 : " + pk.getType());
		System.out.println("레벨 : " + pk.getPmonLevel());
		System.out.println("체력 : " + pk.getHp());
		System.out.println("공격력 : " + pk.getAttack());
		System.out.println("방어력 : " + pk.getDefense());
		System.out.println("=============================");
	}

	// evolve 진화가능여부 판단후
	public void evolve(Pokemon pk) { // Trainer 클래스 mypmonList에서 가져옴.
		if (!pk.getPmonEvolve()) {
			System.out.println("진화할 수 없는 포켓몬입니다.");
			return;
		}
		if (pk.getPmonLevel() >= 5) {
			for (int k = 0; k < pmon.length; k++) {
				if (pk.getName().equals(pmon[k].getName())) {
					Pokemon evolvedPmon = copyPmon(pmon[k + 1]); // 다음 진화된 포켓몬 객체
					pk.setName(evolvedPmon.getName());
					pk.setType(evolvedPmon.getType());
					pk.setPmonLevel(evolvedPmon.getPmonLevel());
					pk.setHp(evolvedPmon.getHp());
					pk.setMaxHp(evolvedPmon.getMaxHp());
					pk.setAttack(evolvedPmon.getAttack());
					pk.setDefense(evolvedPmon.getDefense());
					pk.setPmonEvolve(evolvedPmon.getPmonEvolve());
					System.out.println("==========진화 후 결과==========");
					pk.status(pk);
					return;
				}
			}
		} else
			System.out.println("진화하기엔 레벨이 부족합니다");
	}

}
